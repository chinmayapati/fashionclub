<section class="content account">
  <div class="container">
    <div class="row">
      <div class="col-sm-3">
        <aside class="sidebar">

          <!-- WIDGET:CATEGORIES - START -->
          <div class="widget widget-navigation">
            <ul class="nav nav-pills nav-stacked">
              <li><a href="/accounts/dashboard">Account Dashboard</a></li>
              <li><a href="/accounts/profile">Personal Infromation</a></li>
              <li><a href="/accounts/address">My Address</a></li>
              <li class="active"><a href="/accounts/orders">My Orders</a></li>
              <li><a href="/accounts/wishlist">Wishlist</a></li>
              <li><a href="/">Back to Shop</a></li>
            </ul>
          </div>
          <!-- WIDGET:CATEGORIES - END -->

        </aside>
      </div>
      <div class="col-sm-9">
        <article class="account-content">
          <h3>My Orders</h3>
          <div class="table-responsive border">
            <table class="table table-bordered">
              <tr>
                <th class="col-xs-2">Order ID</th>
                <th class="col-xs-3">Date</th>
                <th class="col-md-1 hidden-xs hidden-sm">Items</th>
                <th class="col-xs-2">Total Price</th>
                <th class="col-xs-3">Status</th>
                <th class="col-xs-1"></th>
              </tr>
              <% if !@orders.nil? and !@orders.empty? %>
                  <% for order in @orders %>
                      <tr>
                        <td><%= link_to "##{order.id}", {action: "orders", uid: order.user_id, oid: order.id} %></td>
                        <td><%= order.created_at.to_date %></td>
                        <td class="hidden-xs hidden-sm">3</td>
                        <td>Rs <%= order.total %></td>
                        <td>
                          <% case order[:order_status] %>
                          <% when "On Hold" %>
                              <span class="label label-info">On Hold</span>
                          <% when "Processing" %>
                              <span class="label label-info">Processing</span>
                          <% when "Completed" %>
                              <span class="label label-success">Completed</span>
                          <% when "Cancelled" %>
                              <span class="label label-danger">Canceled</span>
                          <% end %>
                        </td>
                        <td><a href="/accounts/singleorder?user_auth=<%= order.user_id %>&order_id=<%= order.id %>" class="btn btn-primary btn-sm">View</a></td>
                      </tr>
                  <% end %>
              <% end %>
            </table>
          </div>
        </article>
      </div>
    </div>
  </div>
</section>
<!-- ==========================
  MY ACCOUNT - END
=========================== -->
