<script>


  $(document).ready(function () {

    $('.addwishlist').click(function (event) {

      var product_id = $(event.currentTarget).attr('id');
      $.ajax({
        type: 'GET',
        url: '/home/stores',
        data: {
          wishlistitem: product_id
        }, success: function () {
          alert("Added Successfully To Your Wishlist");
          location.reload();
        },
        error: function () {
          alert('Item already exists in your wishlist!');
        }
      });
    });


  });


    $(document).ready(function () {


      var cat="<%=params[:cat].capitalize %>";
      var subcat="<%=params[:subcat]%>";
      var men="Men";
      var women="Women";
      if (cat==men){
        $("#parent-1").addClass("in");
        $("#"+men).removeClass("collapsed");
        $("#"+subcat).addClass("active");
      }

      if(cat==women){
        $("#parent-2").addClass("in");
        $("#"+women).removeClass("collapsed");
        $("#"+subcat).addClass("active");
      }



      $('#product-quickview').on('show.bs.modal', function (e) {
        // using latest bootstrap so, show.bs.modal

        var id=$(e.relatedTarget).data('id');
        $("#qid").text(id);
        var brand=$(e.relatedTarget).data('brand');
        $("#qbrand").text(brand);
        var p= $(e.relatedTarget).data('price')
        var d=$(e.relatedTarget).data('discount');
        var dprice=p-Math.floor((d/100)*p);
        $("#aprice").text(p+" Rs");
        $("#dprice").text(dprice+" Rs");
        $("#qtags").text($(e.relatedTarget).data('tags')+","+brand.toLowerCase());
        $("#qname").text($(e.relatedTarget).data('name'));
        if(d==0){
          $('#qnew').removeClass('hidden');
        }else{
          $('#qsale').removeClass('hidden');
        }
        var image=$(e.relatedTarget).data('image');
        $('img[alt="image1"]').attr('src','/assets/images/products/'+image+'/1.jpg');
        $('img[alt="image2"]').attr('src','/assets/images/products/'+image+'/2.jpg');
        $('img[alt="image3"]').attr('src','/assets/images/products/'+image+'/3.jpg');
        $('img[alt="image4"]').attr('src','/assets/images/products/'+image+'/4.jpg');

        $("#addcart").attr('href',"/home/single_product?pid="+id+"&selectsize=false");

      });

    });
</script>