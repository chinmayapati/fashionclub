<!-- ==========================
  ACCOUNT - START
=========================== -->
<section class="content account">
  <div class="container">
    <div class="row">
      <div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3">
        <div class="login-form-wrapper">
          <h3>Sign In</h3>

          <% if !@error.empty? %>
              <div class="form-group">
                <span style="color: #ff0000;"><%= @error %></span>
              </div>
          <% end %>

          <%= form_for(:signin, url: signin_path) do |f| %>
              <div class="form-group">
                <label>Email<span class="required">*</span></label>
                <%= f.email_field :email, class: "form-control" %>
              </div>
              <div class="form-group">
                <label>Password<span class="required">*</span></label>
                <%= f.password_field :password, class: "form-control" %>
              </div>
              <div class="form-group">
                <div class="checkbox">
                  <input type="checkbox" id="remember">
                  <label for="remember">Remember me</label>
                </div>
              </div>
              <%= f.submit "Login", class: "btn btn-primary btn-lg btn-block" %>
          <% end %>
          <p class="col-lg-6 col-md-6 col-xs-6 form-text"> <a href="/recover">Forgot Password ?</a></p>
          <p class="col-lg-6 col-md-6 col-xs-6 form-text">New user? <a href="/signup">Sign up now!</a></p>
          <br/>
        </div>

      </div>
    </div>
  </div>
</section>
<!-- ==========================
  ACCOUNT - END
=========================== -->



